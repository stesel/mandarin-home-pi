{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@mandarin-home-pi/common": ["../common/src"],
      "@mandarin-home-pi/common/*": ["../common/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../common/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
