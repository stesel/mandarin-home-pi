{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mandarin-home-pi/common": ["../common/src"],
      "@mandarin-home-pi/common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
