{
  "private": true,
  "name": "mandarin-home-pi",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",
    "bootstrap": "lerna bootstrap",
    "start:app": "lerna run --scope @mandarin-home-pi/server start",
    "build": "ultra -r --build build",
    "test": "ultra -r test",
    "lint": "ultra -r lint",
    "test:coverage": "ultra -r test --coverage",
    "test:summary": "./scripts/summary.sh",
    "test:all": "yarn test:coverage && yarn test:summary"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.20.3",
    "jest": "24.9.0",
    "lerna": "^3.22.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "typescript-bundle": "^1.0.16",
    "ultra-runner": "^3.5.0"
  },
  "dependencies": {
    "mobx": "^5.15.4",
    "ws": "^7.3.1"
  }
}
